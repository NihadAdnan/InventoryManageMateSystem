@model InventoryManageMate.DTO.Models.Order

<h1 class="text-center">Edit Order</h1>

@if (Model is null)
{
    <p>No Order was found!</p>
}

else
{
    <form method="post" action="Edit">

        <div class="mt-5">
            <label class="form-label">Customer Code</label>
            <input type="text" id="id" class="form-control" required asp-for="OrderID" readonly />
        </div>

        <div class="mt-5">
            <label for="name" class="form-label">Customer Name</label>
            <input type="text" id="name" class="form-control" required asp-for="CustomerName" readonly />
        </div>

        <div class="mt-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" id="email" class="form-control" required asp-for="CustomerEmail" readonly />
        </div>

        <div class="mt-3">
            <label for="phone" class="form-label">Phone Number</label>
            <input type="tel" id="phone" class="form-control" required asp-for="CustomerPhone" readonly />
        </div>

        <div class="mt-3">
            <label for="address" class="form-label">Shipping Address</label>
            <input type="text" id="address" class="form-control" required asp-for="ShippingAddress" />
        </div>

        <div class="mt-3">
            <label for="date" class="form-label">Order Date</label>
            <input type="date" id="date" class="form-control" required asp-for="OrderDate" readonly />
        </div>

        <div class="mt-3">
            <label for="status" class="form-label">Order Status</label>
            <select id="status" class="form-select" required asp-for="OrderStatus">
                <option value="Pending">Pending</option>
                <option value="Processing">Processing</option>
                <option value="Shipped">Shipped</option>
                <option value="Delivered">Delivered</option>
                <option value="Cancelled">Cancelled</option>
            </select>
        </div>


        <div class="mt-3">
            <label for="payment" class="form-label">Payment Method</label>
            <select id="payment" class="form-select" required asp-for="PaymentMethod">
                <option value="Credit Card">Credit Card</option>
                <option value="Debit Card">Debit Card</option>
                <option value="PayPal">PayPal</option>
                <option value="Cash on Delivery">Cash on Delivery</option>
            </select>
        </div>

        <div class="mt-3">
            <label for="amount" class="form-label">Total Amount</label>
            <input type="number" id="amount" class="form-control" step="0.01" required asp-for="TotalAmount" />
        </div>

        <div class="mt-5">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Orders" asp-route-id="@Model.OrderID">Delete</button>
        </div>
    </form>
}

