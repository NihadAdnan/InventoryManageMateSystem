@model InventoryManageMate.DTO.ViewModels.AddDetailOrderViewModel

<h1 class="text-center">Add An Order</h1>


<form method="post">
    <div class="mt-5">
        <label for="name" class="form-label">Product Name</label>
        <input type="text" id="name" class="form-control" required asp-for="ProductName" />
    </div>

    <div class="mt-3">
        <label for="quantity" class="form-label">Quantity</label>
        <input type="number" id="quantity" class="form-control" step="1" required asp-for="Quantity" />
    </div>

    <div class="mt-3">
        <label for="amount" class="form-label">Unit Price</label>
        <input type="number" id="amount" class="form-control" step="0.01" required asp-for="UnitPrice" />
    </div>

    <div class="mt-5">
        <button type="submit" class="btn btn-primary">Save</button>

    </div>

</form>